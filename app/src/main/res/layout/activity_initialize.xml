<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ch.m3ts.tracker.visualization.live.LiveActivity"
    android:keepScreenOn="true">

    <com.otaliastudios.zoom.ZoomLayout
        android:id="@+id/init_zoomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical|horizontal"
        android:fitsSystemWindows="true"
        android:longClickable="true"
        app:alignment="center"
        app:animationDuration="280"
        app:flingEnabled="true"
        app:hasClickableChildren="true"
        app:horizontalPanEnabled="false"
        app:maxZoom="5"
        app:maxZoomType="zoom"
        app:minZoom="1"
        app:minZoomType="zoom"
        app:oneFingerScrollEnabled="true"
        app:overPinchable="false"
        app:overScrollHorizontal="true"
        app:overScrollVertical="true"
        app:scrollEnabled="true"
        app:threeFingersScrollEnabled="true"
        app:transformation="centerInside"
        app:transformationGravity="center"
        app:twoFingersScrollEnabled="true"
        app:verticalPanEnabled="false"
        app:zoomEnabled="true">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="1920dp"
            android:layout_height="1080dp">
            <include layout="@layout/camera_surface_view" />
        </FrameLayout>
    </com.otaliastudios.zoom.ZoomLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <SurfaceView
            android:id="@+id/init_tableSurface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="roll: "
            android:textSize="20dp"
            android:id="@+id/roll"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/display_serving"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pitch: "
            android:textSize="20dp"
            android:id="@+id/pitch"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/display_serving"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="az: "
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:id="@+id/az"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/display_serving"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/init_fragmentPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/tracker_loading"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:orientation="vertical"
        android:visibility="gone">
        <include
            layout="@layout/loading_bar"/>
        <TextView
            android:id="@+id/tracker_info"
            android:text="@string/tiLoadingText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/primary_light"
            android:textSize="20sp" />
    </LinearLayout>
    <include
        layout="@layout/camera_scan_overlay"
        android:id="@+id/scan_overlay"
        android:layout_height="250dp"
        android:layout_width="250dp"
        android:layout_gravity="center"/>
</merge>