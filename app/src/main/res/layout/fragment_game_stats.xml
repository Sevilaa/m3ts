<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_stats_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:columnCount="1"
                android:rowCount="5">

                <TextView
                    android:id="@+id/gstTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/primary_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/player_left"
                        android:layout_width="0dp"
                        android:layout_weight="0.375"
                        android:layout_height="match_parent"
                        android:textColor="@color/primary_light"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:textColor="@color/primary_light"
                        android:textSize="30sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/player_right"
                        android:layout_width="0dp"
                        android:layout_weight="0.375"
                        android:layout_height="match_parent"
                        android:textColor="@color/primary_light"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/mstTitlePlayer"
                    android:textAlignment="center"
                    android:textColor="@color/primary_light"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#C1C1C1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="40dp"
                    android:paddingVertical="5dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/fastest_strike_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:textStyle="bold"
                        android:textColor="@color/primary_light"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/fastest_strike"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:text="@string/mstFastestStrike"
                        android:textSize="15sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/fastest_strike_right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:textColor="@color/primary_light"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="40dp"
                    android:paddingVertical="5dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/strikes_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:textColor="@color/primary_light"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/strikes"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:text="@string/mstStrikes"
                        android:textSize="15sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/strikes_right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/primary_light"
                        android:tint="@color/primary_light"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/mstTitleOverall"
                    android:textAlignment="center"
                    android:textColor="@color/primary_light"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#C1C1C1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="30dp"
                    android:paddingTop="5dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/total_duration_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:text="@string/mstTotalDuration"
                        android:textSize="15sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/average_duration_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:text="@string/mstAvgDuration"
                        android:textSize="15sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/error_rate_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:text="@string/mstErrorRate"
                        android:textSize="15sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="40dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/total_duration"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:textColor="@color/primary_light"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/average_duration"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:textColor="@color/primary_light"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/error_rate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/primary_light"
                        android:textColor="@color/primary_light"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/gstHistory"
                    android:textAlignment="center"
                    android:textColor="@color/primary_light"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#C1C1C1" />

                <ExpandableListView
                    android:id="@+id/game_history"
                    android:layout_height="250dp"
                    android:layout_width="match_parent"
                    android:indicatorEnd="?android:attr/expandableListPreferredItemIndicatorLeft"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.5dp" />
            </GridLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>