<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:id="@+id/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_list">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:layout_centerVertical="true"
            android:columnCount="1"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Create Match ID"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="50sp"
                android:textColor="@android:color/secondary_text_light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="set an ID for your display to connect to"
                android:textStyle="normal"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@android:color/secondary_text_light"/>

            <EditText
                android:id="@+id/init_editMatchID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="40dp"
                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:paddingBottom="12dp"
                android:textSize="20sp"
                android:textStyle="normal"
                android:elevation="8dp"
                android:text="RANDOM_ID"
                android:textAllCaps="true"
                android:textAlignment="textStart"
                android:background="@drawable/radius_small_background"
                android:textColor="@android:color/secondary_text_light"/>

            <Button
                android:id="@+id/init_createRoomBtn"
                android:onClick="onUseAsTracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_background"
                android:backgroundTint="@android:color/secondary_text_light"
                android:elevation="8dp"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:text="Create"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="8dp"
                android:textColor="#fff"
                android:textSize="24sp"/>
        </GridLayout>

    </RelativeLayout>
</RelativeLayout>
