<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/corner_selection_views" />

    <Button
        android:id="@+id/init_startGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_background"
        android:padding="20dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="@string/initStartGameButtonLabel"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/radius_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/init_selectedMatchTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_light"
            android:text="@string/initMatchTypeLabel"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/init_selectedMatchType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_light"
            android:textStyle="bold"
            android:text=""
            android:layout_toEndOf="@id/init_selectedMatchTypeLabel"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/radius_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/init_selectedServerSideLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_light"
            android:text="@string/initServerSideLabel"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/init_selectedServerSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_light"
            android:textStyle="bold"
            android:text=""
            android:layout_toEndOf="@id/init_selectedServerSideLabel"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"/>
    </RelativeLayout>

</RelativeLayout>