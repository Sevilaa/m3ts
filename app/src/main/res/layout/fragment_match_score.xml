<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_score_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">
            <TextView
                android:id="@+id/left_name"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:text="Player 1"
                android:textSize="50sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/secondary_text_light"
                tools:ignore="NestedWeights" />
            <TextView
                android:id="@+id/right_name"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:text="Player 2"
                android:textSize="50sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/secondary_text_light"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:weightSum="10.5">
        <TextView
            android:id="@+id/left_score"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="@string/msInitialValue"
            android:textSize="200sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/secondary_text_light"/>
        <TextView
            android:id="@+id/left_games"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="@string/msInitialValue"
            android:textSize="80sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/secondary_text_light"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="@string/msDivider"
            android:textSize="80sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/secondary_text_light"/>
        <TextView
            android:id="@+id/right_games"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="@string/msInitialValue"
            android:textSize="80sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:textColor="@android:color/secondary_text_light"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/right_score"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="@string/msInitialValue"
            android:textSize="200sp"
            android:textStyle="bold"
            android:textColor="@android:color/secondary_text_light"/>
    </TableRow>
</TableLayout>